package game.world;

public class Runner {
	public static final int ACTION_1 = 0;
	public static final int JUMPING = 1;
	public static final int SLASHING = 2;
	
	public int x,y,action;
	
	
	public Runner(int x, int y){
		action = ACTION_1;
		this.x = x;
		this.y = y;
	}
	
	public void Run(){
		action = ACTION_1;
		
	}
	
	public void Jump(){
		action = JUMPING;
		
	}
	
	public void Slash(){
		action = SLASHING;
		
	}
}
