package com.runner.planets.objects;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import com.badlogic.gdx.graphics.g2d.TextureAtlas;
import com.badlogic.gdx.math.Rectangle;
import com.runner.RunnerGame;

public class Runner extends GameObject{
	private Rectangle bottom, left, right, top, full;
	private float velocityY;
	private String image;
	private int count;
	private boolean isJump;

	public Runner(int x, int y, float ini) {
		this.setX(x);
		this.setY(y);
		
		full =   new Rectangle(512.0f, 71.0f, 75f, 96f);
		bottom = new Rectangle(512.0f, 71.0f, 75f, 12f);
		left =   new Rectangle(512.0f, 83.0f, 37f, 72f);
		right =  new Rectangle(549.0f, 83.0f, 38f, 72f);
		top =    new Rectangle(512.0f,156.0f, 75f, 12f);
		
		velocityY = 0;
		count = 1;
		image = "walk010";
		isJump = false;
	}
	
	public void draw(SpriteBatch batch, TextureAtlas atlas){
		full.x = this.getX();
		full.y = this.getY();
		Gdx.app.log(RunnerGame.LOG, "full : " + full.x + "," + full.y);
		
		bottom.x = this.getX();
		bottom.y = this.getY();
		
		
		left.x = this.getX();
		left.y = this.getY()+12;
		Gdx.app.log(RunnerGame.LOG, "left : " + left.x + "," + left.y);
		
		right.x = this.getX()+37;
		right.y = this.getY()+12;
		Gdx.app.log(RunnerGame.LOG, "right: " + right.x + "," + right.y);
		 
		top.x = this.getX();
		top.y = this.getY()+84;
		Gdx.app.log(RunnerGame.LOG, "top  : " + top.x + "," + top.y);
		
		if(!isJump) setSprite();
		batch.draw(atlas.findRegion(image),this.getX(), this.getY());
		count++;
	}
	
	public int hits(Rectangle r){
		if (right.overlaps(r)) {
			return 3;
		}
		
		if(bottom.overlaps(r)) {
			return 1;
		}
		
		if (top.overlaps(r)) {
			return 4;
		}

		return -1;
	}
	
	public void action (int type, float x, float y){
		if (type == 1 || type == 4) {
			velocityY = 0;
			this.setX(full.x);
			this.setY(y);
		}
		
		if (type == 2) {
			velocityY = 0;
			this.setX(x);
			this.setY(full.y);
		}
	}
	
	public void update(float delta){
		if (delta > .2) delta = 0.05f;
		velocityY -= 1000 * delta;
		this.setY(full.y + (velocityY*delta));
	}
	
	public void moveRight(float delta){
		full.x += (200*delta);
		this.setX(full.x);
	}
	
	public void jump(){
		if (velocityY == 0) {
		   velocityY = 600;
		}
	}

	@Override
	public Rectangle getHitBox() {
		return full;
	}

	@Override
	public int hitAction(int side) {
		return 0;
	}
	
	public void setSprite(){
		if(count >= 1 && count <=5){
			image = "walk010";
		}else if(count >= 6 && count <= 10){
			image = "walk012";
		}else if(count >=11 && count <= 15){
			image = "walk013";
		}else if(count >=16 && count <= 20){
			image = "walk014";
		}else if(count >=21 && count <= 25){
			image = "walk015";
		}else if(count >=26 && count <= 30){
			image = "walk016";
		}else if(count >=31 && count <= 35){
			image = "walk017";
		}else if(count >=36 && count <= 40){
			image = "walk018";
		}else if(count >=41 && count <= 45){
			image = "walk019";
		}else if(count >=46 && count <= 50){
			image = "walk020";
			count = 0;
		}
	}
}
